<h2>My Rides</h2>
<% @rides.each do |ride|%>
 <div class="card">
 <div class="card-body">
    <div class="row">
        <div class="col-sm-6">
            <p>Origin</p>
        </div>
        <div class="col-sm-6">
        <p><%= ride.origin %></p>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-6">
            <p>destination</p>
        </div>
        <div class="col-sm-6">
        <p><%= ride.destination %></p>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-6">
            <p>Take off</p>
        </div>
        <div class="col-sm-6">
        <p><%= ride.time %></p>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-6">
            <p>Capacity</p>
        </div>
        <div class="col-sm-6">
        <p><%= ride.capacity %></p>
        </div>
    </div>
    
    <div class="modal fade" id="modal-<%=ride.id%>" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
        <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">Requests</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <div class="modal-body">
            <% ride.requests.each do |request|%>
            <%if request.accepted == nil %>
            <div class="row" style="padding-bottom:2px;">
                <div class="col-md-6"><%= request.user.name%></div>
                 <div class="col-md-6">
                    <a href=<%="/requests/#{request.id}/accept"%> class="btn btn-primary">accept</a>
                    <a href=<%="/requests/#{request.id}/decline"%> class="btn btn-danger">reject</a>
                 </div>
                </div>
                <hr>
            <%end%>
            <%end%>
            <p> No more unreplied requests</p>
        </div>
        <div class="modal-footer" style="border-top:none;">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        </div>
        </div>
    </div>
    </div>



    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#modal-<%=ride.id%>">
    View Requests
    </button>
 </div>
 </div>
 <br>
<%end%>
</div>
